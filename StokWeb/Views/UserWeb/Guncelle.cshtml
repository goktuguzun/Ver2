@model StokWeb.Models.Entitiy.WebUser

@{
    ViewBag.Title = "Mevcut Stok Guncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Web Modülü Kullanıcı Guncelle</h2>

@using (Html.BeginForm("Guncelle", "UserWeb", FormMethod.Post))
{
    <div class="form-group">
        <label>Kullancı Adı</label>
        @Html.TextBoxFor(k => k.UserName, new { @class = "form-control" })
        <br />
        <label>Ad</label>
        @Html.TextBoxFor(k => k.Name, new { @class = "form-control" })
        <br />
        <label>Soyad</label>
        @Html.TextBoxFor(k => k.Surname, new { @class = "form-control" })
        <br />
    </div>
    <div>
        <button class="btn btn-success" type="submit">Güncelle</button>
    </div>
}